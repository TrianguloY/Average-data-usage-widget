<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.trianguloy.continuousDataUsage"
    android:versionCode="13"
    android:versionName="2.0">

    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">
        <activity android:name=".activities.Main"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/s_title"
            android:parentActivityName=".activities.Main"
            android:launchMode="singleTop">
        </activity>
        <activity
            android:name=".activities.HistoryActivity"
            android:label="@string/h_title"
            android:parentActivityName=".activities.Main"
            android:launchMode="singleTop"/>

        <receiver
            android:name=".widgets.AppWidgetProgress"
            android:label="@string/wdgLabel_progressBars">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widgetprovider_progress" />
        </receiver>
        <receiver
            android:name=".widgets.AppWidgetRate"
            android:label="@string/wdgLabel_rate">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widgetprovider_rate" />
        </receiver>

    </application>

</manifest>